<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="0dp">

        <ImageView
            android:id="@+id/dissTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowfight" />

        <TextView
            android:id="@+id/discussionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:elevation="4dp"
            android:fontFamily="@font/playfair_display_regular"
            android:text="Description ID"
            android:textColor="@color/darkTextColor"
            android:textColorHint="#00F44336"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/titleDiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discussionId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/playfair_display_regular"
            android:text="Title"
            android:textColor="@color/darkTextColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/messagePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleDiss"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/playfair_display_regular"
            android:text="Message"
            android:textColor="@color/darkTextColor"
            android:textSize="24sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>