<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="0dp">

        <ImageView
            android:id="@+id/dissTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowfight" />

        <TextView
            android:id="@+id/TypeT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:fontFamily="@font/playfair_display_regular"
            android:text="Type"
            android:textColor="@color/darkTextColor"
            android:textColorHint="#00F44336"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/titleCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TypeT"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/playfair_display_regular"
            android:text="Title"
            android:textColor="@color/darkTextColor"
            android:textSize="14sp" />

        <katex.hourglass.in.mathlib.MathView
            android:id="@+id/classDate"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleCreate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="26dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="26dp"
            android:background="#ffffff"
            app:setClickable="true"
            app:setTextColor="@color/darkTextColor"
            app:setTextSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>