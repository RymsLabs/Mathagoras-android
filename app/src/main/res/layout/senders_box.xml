<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <ImageView
            android:id="@+id/backTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowfight" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameDiss"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="0dp"
            android:text="Enrollment Number"
            android:textColor="#009688"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dateDiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userType"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="26dp"
            android:text="Date"
            android:textColor="#009688"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/mess_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Message"
            android:textColor="@color/darkTextColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="26dp"
            android:text="User Type"
            android:textColor="#D32F2F"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeDiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userType"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/dateDiss"
            android:text="Time"
            android:textColor="#009688"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/nameDiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="#009688"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>